{
  "compilerOptions": {
    "strict": true,
    "allowJs": false,
    "skipLibCheck": false,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "target": "ES2018",
    "esModuleInterop": true,
    "sourceMap": false,
    "rootDir": "src",
    "outDir": "dist/js",
    "noEmitOnError": true,
    "jsx": "react",
    "typeRoots": ["node_modules/@types"],
    "incremental": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
